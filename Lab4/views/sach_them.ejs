<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>

<div class="container">
  <form class="col-6 border border-dark rounded p-3 m-auto" action="/sach/store" method="POST">
    <div class="form-group mb-3">
      <label for="tenSach">Tên sách</label>
      <input class="form-control bg-info" name="tenSach" id="tenSach" />
    </div>
    <div class="form-group mb-3">
      <label for="gia">Giá</label>
      <input class="form-control bg-primary" name="gia" id="gia" />
    </div>
    <div class="form-group">
      <label for="loai">Loại</label>
      <select class="form-control" id="loai" name="loai">
        <% for(let item of loai) { %>
          <option value=<%= item.id %>><%= item.tenLoai %></option>
        <% } %>
      </select>
    </div>
    <div class="form-group mb-3 mt-3">
      <label>Ẩn hiện</label>
      <input type="radio" name="anHien" value="1" checked /> Hiện &nbsp; &nbsp;
      <input type="radio" name="anHien" value="0" /> Ẩn
    </div>
    <div class="form-group">
      <label for="moTa">Mô tả</label>
      <textarea class="form-control" name="moTa" id="moTa" rows="3"></textarea>
    </div>
    <div class="form-group mt-3">
      <label for="fileHinh">Chọn hình ảnh </label>
      <input type="file" name="fileHinh" class="form-control-file" id="fileHinh">
    </div>
    <div class="form-group mt-3">
      <button type="submit" class="btn btn-dark px-4 py-2 text-white">LƯU DATABASE</button>
    </div>
  </form>
</div>
